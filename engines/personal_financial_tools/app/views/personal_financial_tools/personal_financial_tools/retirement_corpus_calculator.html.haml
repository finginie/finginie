= simple_form_for @retirement_corpus_calculator, :url => retirement_corpus_calculator_path, :method => :get do |f|
  = f.error_notification

  %h4 Retirement Corpus Calculator
  %ul
    %li The corpus amount is calculated based on the assumption that life expectancy is 80 years.
  %br

  .inputs
    = f.input :current_age
    = f.input :retirement_age
    = f.input :monthly_expenses
    = f.input :inflation
    = f.input :expected_return
  .actions
    = f.button :submit



  = content_tag :div, flash[:result], :id => 'result' if flash[:result].is_a?(String)
