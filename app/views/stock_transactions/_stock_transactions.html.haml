%table
  %tr
    %th Date
    %th Type
    %th Name
    %th Quantity
    %th Price
    %th Total Amount

  - stock_transactions.each do |stock_transaction|
    %tr
      %td= stock_transaction.date
      %td= stock_transaction.action
      %td= stock_transaction.stock.name
      %td= stock_transaction.amount
      %td= stock_transaction.price
      %td= stock_transaction.total_cost
      %td= link_to 'Show', resource_path(stock_transaction)
      %td= link_to 'Edit', edit_resource_path(stock_transaction)
      %td= link_to 'Destroy', resource_path(stock_transaction), :confirm => 'Are you sure?', :method => :delete
