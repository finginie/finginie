.row.show-grid
  .span8
    #home-slider.carousel.slide
      .carousel-inner
        .item.active
          = link_to image_tag('Never-invested.jpg',:class => 'img-rounded'), main_app.edit_comprehensive_risk_profiler_path
        .item
          = link_to image_tag('Suggested-Investments.png',:class => 'img-rounded'), main_app.edit_comprehensive_risk_profiler_path
