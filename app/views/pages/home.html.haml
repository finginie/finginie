      .span12
        = link_to image_tag('investment-workshop.png',:class => 'img-rounded'), main_app.page_path('investment-workshop')
    .row-fluid.show-grid
      .span12.well-border
        %ul.nav.nav-tabs
          %li
            %h5 Sectoral Indices
          %li.pull-right.active= link_to 'NSE', "#Nse_sectoral_indices", :data => { :toggle => :tab }
          %li.pull-right= link_to 'BSE', "#Bse_sectoral_indices", :data => { :toggle => :tab }

        .tab-content
