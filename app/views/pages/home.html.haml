      %a.carousel-control.right{:href => '#home-slider', :data => {:slide => :next}} &rsaquo;
  .span4
    .pull-right
      = link_to image_tag('ebola-370.jpg',:class => 'img-rounded'), main_app.page_path('win-an-ipad3')

.row.show-grid
  .span8
    .row-fluid.show-grid
      .span12.well-border
        %ul.nav.nav-tabs
          %li
            %h5 News
          %li.pull-right= link_to 'Stock Tips',   '#news_stock_tips',   :data => { :toggle => :tab }
          %li.pull-right= link_to 'Global News',  '#news_global_news',  :data => { :toggle => :tab }
          %li.pull-right= link_to 'Company',      '#news_companies',    :data => { :toggle => :tab }
          %li.pull-right= link_to 'Economy',      '#news_economy',      :data => { :toggle => :tab }
          %li.pull-right= link_to 'Markets',      '#news_markets',      :data => { :toggle => :tab }
        .tab-content.show-grid
          .tab-pane#news_stock_tips.active
          .tab-pane#news_global_news
          .tab-pane#news_companies
          .tab-pane#news_economy
          .tab-pane#news_markets
    .row-fluid.show-grid
      .span12
        %h5 Trending Shares
        .row-fluid.show-grid
          .span6.well-border
            %ul.nav.nav-tabs
              %li
                %h5 NSE
              %li.pull-right.active= link_to 'Top Gainers', "#Nse_top_gainers", :data => {:toggle => :tab}
              %li.pull-right= link_to 'Top Losers',  "#Nse_top_losers",  :data => {:toggle => :tab}
              %li.pull-right= link_to 'Most Active', "#Nse_most_active", :data => {:toggle => :tab}
            .tab-content
              .tab-pane#Nse_top_gainers.active
              .tab-pane#Nse_top_losers
              .tab-pane#Nse_most_active
          .span6.well-border
            %ul.nav.nav-tabs
              %li
                %h5 BSE
              %li.pull-right.active= link_to 'Top Gainers', "#Bse_top_gainers", :data => {:toggle => :tab}
              %li.pull-right= link_to 'Top Losers',  "#Bse_top_losers",  :data => {:toggle => :tab}
              %li.pull-right= link_to 'Most Active', "#Bse_most_active", :data => {:toggle => :tab}
            .tab-content
              .tab-pane#Bse_top_gainers.active
              .tab-pane#Bse_top_losers
              .tab-pane#Bse_most_active

    .row-fluid.show-grid
      .span12.well-border
        %ul.nav.nav-tabs
          %li
            %h5 Mutual Funds
          %li.pull-right.active= link_to 'Biggest Equity', '#biggest_mutual_funds', :data => {:toggle => :tab}
          %li.pull-right= link_to 'Top Gainers', '#top_mutual_funds', :data => {:toggle => :tab}
          %li.pull-right= link_to 'Top Losers', '#lowest_mutual_funds', :data => {:toggle => :tab}
        .tab-content
          .tab-pane#biggest_mutual_funds.active
          .tab-pane#top_mutual_funds
          .tab-pane#lowest_mutual_funds

