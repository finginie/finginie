= simple_nested_form_for [parent, resource],  :html => {:class => 'form-horizontal'} do |f|
  = f.error_notification

  .security
    = f.fields_for :fixed_deposit do |deposit|
      = deposit.input :type, :as => :hidden
      = deposit.input :name, :hint => "e.g. SBI 3 year FD at 8.5% p.a"
  .inputs
    = f.input :action, :collection => [["Buy",:buy]], :include_blank => false
    = f.input :price
  .security
    = f.fields_for :fixed_deposit do |deposit|
      = deposit.input :period
      = deposit.input :rate_of_interest

  .inputs
    = f.input :date,:order=> [:day,:month,:year], :start_year => 2000
    = f.input :comments

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
