%h1 Stock Search
= simple_form_for @search, :url => collection_path, :html => {:novalidate => true} do |f|
  = f.input :name_contains, :required => false
  = f.input :sector_contains, :collection => Stock::SECTOR_NAMES, :prompt => "Any", :required => false
  .loading
    Loading...
    = image_tag 'ajax-loader.gif', :class => :loading

#stocks= t '.no_records'

:javascript
  $(function() {
    window.router = new Finginie.Routers.StocksRouter({stocks: #{@stocks.to_json.html_safe}});
    Backbone.history.start();
  });

