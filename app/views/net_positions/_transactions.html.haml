%h1 Listing transactions

%table
  %tr
    %th Price
    %th Date
    %th Quantity
    %th Comments
    %th
    %th

  - transactions.each do |transaction|
    %tr
      %td= transaction.price
      %td= transaction.date
      %td= transaction.quantity
      %td= transaction.comments
      %td.actions
        = button_to 'Edit', edit_portfolio_net_position_transaction_path(parent, resource, transaction), :method => :get
      %td.actions  
        = button_to 'Delete', portfolio_net_position_transaction_path(parent, resource, transaction), :confirm => 'Are you sure?', :method => :delete

%br
