.row
  .span12
    %h1 Accumulated Points
  .span12
    %section
      %table.table
        %thead
          %tr
            %th
              = t '.completed'
            %th
              = t '.description'
            %th
              = t '.points_per_action'
            %th
              = t '.no_of_times'
            %th
              = t '.total_points'
          - Step.ebola_steps.each do |step_label|
            - step = Step.find(Step.const_get(step_label.upcase))
            %tr
              %td
                = current_user.send("completed_#{step_label}_step?") ? 'Yes' : 'No'
              %td
                = link_to step.name, step.completion_link
              %td
                = step.points
              %td
                = current_user.send("number_of_times_finished_#{step_label}_step")
              %td
                = step.points * current_user.send("number_of_times_finished_#{step_label}_step")
          %tr
            %td
            %td
            %td
            %td
              = t '.total_accumulated_points'
            %td
              = current_user.ebola_points