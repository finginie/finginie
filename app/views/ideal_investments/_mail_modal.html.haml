.ajax_spinner

#email_contact_modal.modal.hide
  .modal-header
    %button.close{"data-dismiss" => "modal", :type => "button"} ×
    %h3 Share your financial plan via email
  .modal-body
    %h2#option-b Invite by email
    .option
      %p Invite your contacts (Gmail, Yahoo, Hotmail etc.)
    .alert.alert-error#error_msg.hide
    = form_tag email_contacts_path, :remote => true, :method => :get, :id => 'email_contacts_form' do
      .sector.control-group
        = label_tag "Contact", "Email", :class => 'control-label'
        .controls
          = email_field_tag("login")
      .sector.control-group
        = label_tag "Contact", "Password", :class => 'control-label'
        .controls
          = password_field_tag("password")
  .modal-footer
    %a.btn.btn-primary
      %span#retrive_contacts Retrieve Contacts

#invitations_modal.modal.hide
  .modal-header
    %button.close{"data-dismiss" => "modal", :type => "button"} ×
    %h4
      = image_tag 'Mail.png'
      Choose contacts
  .modal-body
    = form_tag send_mail_email_contacts_path, :remote => true, :id => 'invite_frnds_form' do
      %table.table#contacts_list
  .modal-footer
    %a.btn.btn-primary
      %span#back_btn Back
    %a.btn.btn-primary
      %span#invite_frnds Invite 0 Friends