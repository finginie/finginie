%h1 Ideal Investments
-%w(fixed_deposits gold_investments large_caps).each do |type|
  %div{ :id => type, :class => cycle("left_div", "right_div") }
    %h1= t(".#{type}")
    %table
      %tr
        %th Name
        %th Amount
      -resource.send(type).each do |investment|
        %tr
          %td= investment.name
          %td= investment.amount
  - reset_cycle
