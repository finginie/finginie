%h1= resource.quiz.name

= simple_form_for resource, :url => financial_planner_risk_profiler_path(resource), :method => :put do |f|
  %ol
    = f.simple_fields_for :responses do |r|
      %li
        %p= r.object.question.text
        = r.input :choice_id, :as => :radio, :collection => r.object.question.choices, :label_method => :text,:collection_wrapper_tag => :ul, :item_wrapper_tag => :li
  .actions
    = f.submit 'Submit'

= link_to 'Back', :back
