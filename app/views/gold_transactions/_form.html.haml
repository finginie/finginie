= simple_form_for([parent, resource]) do |f|
  = f.error_notification

  .inputs
    = f.input :action, :collection => [["Buy",:buy], ["Sell",:sell]], :include_blank => false
    = f.input :amount
    = f.input :price
    = f.input :date,:order=> [:day,:month,:year]
    = f.input :comments

  .actions
    = f.button :submit
