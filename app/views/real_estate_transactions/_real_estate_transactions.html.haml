- unless real_estate_transactions.empty?
  %section{ :class => "RealEstateTransactions" }
    %h1= "Real Estate Transactions"
    %table.table.table-striped
      %tr
        %th.dates Date
        %th.type Type
        %th.name Name
        %th.real_amount Amount
        %th.comment Comments
      %tr.right_align
        %td
        %td
        %td
        %td (Rs)
        %td
      - real_estate_transactions.each do |real_estate_transaction|
        %tr
          %td.dates= l real_estate_transaction.date
          %td.type{:class => real_estate_transaction.action}= real_estate_transaction.action.to_s.titleize
          %td.name= real_estate_transaction.name
          %td.real_amount= number_to_indian_currency real_estate_transaction.price.abs
          %td.comment= real_estate_transaction.comments && real_estate_transaction.comments.strip.empty? ? t("tables_not_available") : real_estate_transaction.comments
