!!!
%html
  %head
    %title FinGinie
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = raw airbrake_javascript_notifier
    = csrf_meta_tags

  %body{:class => [params[:controller], params[:action]] + (params[:id] || '').split('/')}
    %header
      %hgroup.title
        = link_to root_path do
          %h1 Finginie
      %nav
        = render_navigation :level => 1
        = yield :header
      %nav.user
        %ul
          - if current_user
            -#%li= link_to current_user.email, edit_user_registration_path
            %li= button_to 'Sign out', signout_path, :method => :delete
          - else
            %li= button_to 'Sign in', signin_path
            -#%li= link_to 'Sign up', new_user_registration_path
    #wrapper
      #main
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => name if msg.is_a?(String)
        = yield
      %aside
        %h1= active_navigation_item_name :level => 1
        = render_navigation :expand_all => true, :skip_if_empty => true, :level => 2..3
        =yield :aside
    %footer
      %nav.sitemap
        = render_navigation :expand_all => true, :level => 1..2
      %p All your bases are belongs to us. Finginie &copy; 2011
      =yield :footer
