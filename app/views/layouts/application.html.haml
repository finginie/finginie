!!!
%html
  %head
    %title FinGinie
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = raw airbrake_javascript_notifier
    = csrf_meta_tags
  %body{:class => [params[:controller], params[:action]] + (params[:id] || '').split('/')}
    %header
      %nav.user
        %ul
          - if current_user
            %li= link_to current_user.email, edit_user_registration_path
            %li= button_to 'Sign out', destroy_user_session_path, :method => :delete
          - else
            %li= button_to 'Sign in', new_user_session_path
            %li= link_to 'Sign up', new_user_registration_path
      %hgroup.title
        = link_to root_path do
          = image_tag 'logo.png', :alt => 'Finginie'
        %span.tag Beta
      %nav
        = render_navigation :level => 1
      %hgroup.page_header
        =yield :header
    #wrapper
      =yield :wrap
      %aside
        =yield :aside
      #main
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => name if msg.is_a?(String)
        = yield
    %footer
      %nav.sitemap
        = render_navigation :expand_all => true, :level => 1..2
      %p All your bases are belongs to us. Finginie &copy; 2011
      =yield :footer
