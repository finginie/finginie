!!!
%html
  %head
    %title Finginie
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = raw airbrake_javascript_notifier
    = csrf_meta_tags

  %body{ :class => auto_page_class_names }
    - if ENV['PRODUCTION_INSTANCE']
      %webengage{license: '76aa3c4'}
    %header
      #header_resize
        %hgroup.title
          = link_to main_app.root_path do
            //%h1 Finginie
            = image_tag 'logo.png'
            //=image_tag  "logoBlueGreen.png"
        %nav.user
          %ul
            - if current_user
              -#%li= link_to current_user.email, edit_user_main_app.registration_path
              %li= button_to 'Sign out', main_app.signout_path, :method => :delete
            - else
              %li Login with
              %li
                = link_to '/auth/facebook' do
                  = image_tag 'facebook_32.png'
              %li
                = link_to '/auth/google_oauth2' do
                  = image_tag 'google_32.png'
              -#%li= link_to 'Sign up', new_user_main_app.registration_path
        %nav.main
          = render_navigation :level => 1
          = yield :header
    #wrapper
      #main
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => name if msg.is_a?(String)
        .container
          = yield
      %aside
        %h1= active_navigation_item_name :level => 1
        %nav= render_navigation :expand_all => true, :skip_if_empty => true, :level => 2..3
        =yield :aside
    %footer
      %nav.sitemap
        = render_navigation :expand_all => true, :level => 1..2
      =yield :footer
