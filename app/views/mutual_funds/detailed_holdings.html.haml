.row.show-grid
  .span12
    = render 'subnav'
- provide :title, @scheme.name if @scheme.model
- if @scheme.portfolio_holdings
  .row
    .span12
      = facebook_recommendation("Detailed holdings <small>#{@scheme.name}</small>")
  .row
    .span12
      %table.table.table-striped.table-bordered
        %tr
          %th.name= 'Company Name'
          %th= 'Sector'
          %th= 'Asset Class'
          %th= 'Holding (%)'
          %th= 'Market Value (in Cr.)'
          %th= 'Rating'
        - @scheme.portfolio_holdings.each do |portfolio|
          %tr
          %td= portfolio["InvestedCompanyName"]
          %td= portfolio["IndustryName"] || "-"
          %td= portfolio["InstrumentName"] || "-"
          %td= portfolio["Percentage"]
          %td= portfolio["MarketValue"]
          %td= portfolio["Rating"] || "-"
- else
  %p Data Not available

#disqus_thread{data: {disqus_identifier: "mutual_funds_#{@scheme.security_code}"}}
