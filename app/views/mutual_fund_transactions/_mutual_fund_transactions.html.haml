- unless mutual_fund_transactions.empty?
  %table
    %tr
      %th Date
      %th Type
      %th Name
      %th Quantity
      %th Price
      %th Total Amount

    - mutual_fund_transactions.each do |mf_transaction|
      %tr
        %td= l mf_transaction.date
        %td= mf_transaction.action.to_s.titleize
        %td= mf_transaction.mutual_fund.name
        %td= mf_transaction.amount
        %td= number_to_indian_currency mf_transaction.price
        %td= number_to_indian_currency mf_transaction.value
-else
  = t "transactions.no_mutual_fund_transactions"
