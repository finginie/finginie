%h1 Listing loan_transactions

%table
  %tr
    %th Date
    %th Name
    %th Amount
    %th Rate of Interest
    %th Duration

  - collection.each do |loan_transaction|
    %tr
      %td= loan_transaction.date
      %td= loan_transaction.name
      %td= number_to_indian_currency loan_transaction.amount
      %td= loan_transaction.rate_of_interest
      %td= loan_transaction.period
      %td= link_to 'Show', resource_path(loan_transaction)
      %td= link_to 'Edit', edit_resource_path(loan_transaction)
      %td= link_to 'Destroy', resource_path(loan_transaction), :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Loan transaction', new_resource_path
