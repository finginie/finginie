= render 'current_portfolio'
- if resource.empty_transactions?
  = render 'empty_transaction'
- else
  #portfolio-total-asset-allocation-chart.chart{ data: { elements: [['Asset Class','Percenatge']]+resource.total_assets_distribution,
                                                         chartType: 'Pie', title: 'Portfolio Assets Composition'} }
  %table.table.table-striped.assets
    %tr
      %th.name Assets
      %th.asset_amount Amount
      %th.right_align Percentage
    %tr.right_align
      %td
      %td (Rs)
      %td (%)
    -resource.total_assets_distribution_table.each do |asset|
      %tr{:class => asset[:class]}
        %td.name= asset[:asset_type]
        %td.asset_amount= asset[:amount]
        %td.right_align= asset[:percentage]

  %table.table.table-striped.liabilities
    %tr
      %th.name Liabilities
      %th.asset_amount Amount
      %th.right_align Percentage
    %tr.right_align
      %td
      %td (Rs)
      %td (%)
    -resource.total_liabilities_distribution_table.each do |asset|
      %tr{:class => asset[:class]}
        %td= asset[:asset_type]
        %td.asset_amount= asset[:amount]
        %td.right_align= asset[:percentage]

- if resource.assets_and_liabilities?
  #net-worth-chart.chart{ data: { elements: resource.assets_and_liabilities, title: 'Portfolio Summary',
                                  yAxisTitle: 'Amount(Rupees)', chartType: 'Column' } }
