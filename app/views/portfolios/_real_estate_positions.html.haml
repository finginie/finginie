- unless real_estate_positions.empty?
  %section{ :class => "RealEstate" }
    %h1= "Real Estate"
    %table
      %tr
        %th.name Name
        %th Buy Value
        %th Current Value
        %th Unrealised Profit
        %th.center_align Sell
      %tr
        %td.name
        %td (Rs)
        %td (Rs)
        %td (Rs)
        %td
      - real_estate_positions.each do |net_position|
        %tr
          %td.name= net_position.name
          %td= number_to_indian_currency net_position.buy_value
          %td= number_to_indian_currency net_position.current_value
          = table_content_with_red_or_green_class net_position.unrealised_profit
          %td.center_align= link_to 'Sell', sell_portfolio_real_estate_transaction_path(net_position.first.portfolio_id, net_position.first), :method => :get
      %tr.total
        %td.name Total
        %td= number_to_indian_currency real_estate_positions.sum(&:buy_value)
        %td= number_to_indian_currency real_estate_positions.sum(&:current_value)
        = table_content_with_red_or_green_class real_estate_positions.sum(&:unrealised_profit)
        %td
