- unless fixed_deposit_positions.empty?
  %section{ :class => "FixedDeposit" }
    %h1 Fixed Deposits
    %table.table.table-striped
      %tr
        %th.name Name
        %th.center_align Deposit Date
        %th Interest Rate
        %th Duration
        %th Amt Invested
        %th Current Value
        %th Interest Earned
        %th Profit/Loss Percentage
        %th.center_align Redeem
      %tr
        %td.name
        %td
        %td (%p.a)
        %td (years)
        %td (Rs)
        %td (Rs)
        %td (Rs)
        %td (%)
        %td
      - fixed_deposit_positions.each do |net_position|
        %tr
          %td.name= net_position.name
          %td.center_align= l net_position.first.date
          %td= net_position.rate_of_interest
          %td= net_position.period
          %td= number_to_indian_currency net_position.invested_amount
          %td= number_to_indian_currency net_position.current_value
          %td= table_content_with_red_or_green_class net_position.unrealised_profit
          %td= table_content_with_red_or_green_class net_position.unrealised_profit_percentage
          %td.center_align= link_to 'Redeem', redeem_portfolio_fixed_deposit_transaction_path(net_position.first.portfolio_id, net_position.first), :method => :get
      %tr.total
        %td.name Total
        %td
        %td
        %td
        %td= number_to_indian_currency fixed_deposit_positions.sum(&:invested_amount)
        %td= number_to_indian_currency fixed_deposit_positions.sum(&:current_value)
        %td= table_content_with_red_or_green_class fixed_deposit_positions.sum(&:unrealised_profit)
        %td
        %td
