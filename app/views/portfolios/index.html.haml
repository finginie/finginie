%h1 Listing portfolios

%table
  %thead
    %tr
      %th Name
      %th

  %tbody
    - @portfolios.each do |portfolio|
      %tr
        %td= link_to portfolio.name, portfolio
        %td.actions
          = button_to 'Rename', edit_portfolio_path(portfolio), :method => :get
          = button_to 'Destroy', portfolio, :confirm => 'Are you sure?', :method => :delete

%br

= button_to 'New Portfolio', new_portfolio_path, :method => :get
