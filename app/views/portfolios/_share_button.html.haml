= link_to new_public_portfolio_path(:portfolio => portfolio), :class => %w(btn btn-success), :data => {:toggle => :modal, :target => "#share-#{portfolio.id}"} do
  %i.icon-globe.icon-white
  Share
.modal.fade.hide{:id => "share-#{portfolio.id}"}
  .modal-header
    %button.close{:type => :button, :data => {:dismiss => :modal}} x
    %h1 Share #{portfolio.name}
  .modal-body
    %p
      Your Portfolio
      %strong= portfolio.name
      shall be made public. Every one will be able to see the portfolio at
      = link_to public_portfolio_url(portfolio), public_portfolio_path(portfolio)
    %p Your actual amount holding shall not be shared. Only the corresponding percentages shall be visible to a viewer.
  .modal-footer
    = link_to 'Cancel', '#', :class => %w(btn btn-danger), :data => {:dismiss => :modal}
    = link_to 'Confirm', public_portfolio_path(portfolio), :method => :post, :class => %w(btn btn-success)   # TODO: Make the link post to share portfolio page

